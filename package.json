{
  "name": "to-doapp",
  "version": "1.3.1",
  "description": "Günlük başlıklı ve not eklenebilir Electron to-do uygulaması (React arayüz).",
  "author": "Ozhan Gebesoglu",
  "main": "main.cjs",
  "scripts": {
    "dev": "concurrently \"npm:watch\" \"npm:start-electron\"",
    "watch": "node build.mjs --watch",
    "build:renderer": "node build.mjs --outdir renderer-dist",
    "build": "npm run build:renderer",
    "dist": "npm run build:renderer && electron-builder",
    "release": "npm run build:renderer && electron-builder --publish always",
    "start-electron": "electron .",
    "start": "npm run build:renderer && electron ."
  },
  "devDependencies": {
    "@21st-extension/react": "^0.5.14",
    "@21st-extension/toolbar": "^0.5.14",
    "@21st-extension/toolbar-react": "^0.5.14",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0"
  },
  "dependencies": {
    "gsap": "^3.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "build": {
    "appId": "com.notlar.gorevler",
    "productName": "NotlarGorevler",
    "files": [
      "main.cjs",
      "preload.cjs",
      "index.html",
      "dist/renderer.js",
      "dist/renderer.css",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "extraMetadata": {
      "main": "main.cjs"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ozhangebesoglu",
        "repo": "to-do-electron"
      }
    ],
    "win": {
      "target": ["nsis", "appx"],
      "icon": "build/icon.ico",
      "publisherName": "Ozhan Gebesoglu",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": true
    },
    "appx": {
      "applicationId": "NotlarGorevler",
      "identityName": "OzhanGebesoglu.NotlarGorevler",
      "publisher": "CN=F11853EC-4E1F-450A-969C-4DA09F8AB0AC",
      "publisherDisplayName": "Ozhan Gebesoglu",
      "displayName": "Notlar ve Görevler",
      "languages": ["tr-TR", "en-US"],
      "backgroundColor": "#faf8f6",
      "showNameOnTiles": true,
      "addAutoLaunchExtension": false,
      "setBuildNumber": true,
      "makeappxArgs": ["/l", "/v"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}